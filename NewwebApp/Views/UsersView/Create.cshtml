@model NewwebApp.ViewModel.AddUserviewmodel

@{
    ViewData["Title"] = "Add New User";
}


<form asp-action="Create" method="post" >
   
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating">
        <input asp-for="Name" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<Gender>()" class="form-control" autocomplete="username" aria-required="true">
            <option value="1">
                Select Gender
            </option>

        </select>
        <label asp-for="Gender"></label>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="DOB" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="DOB"></label>
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="Address" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Address"></label>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="Numbber" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Numbber"></label>
        <span asp-validation-for="Numbber" class="text-danger"></span>
    </div>


    <div class="form-floating">
        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="ConfirmPassword"></label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <hr/>
    <h6>Roles</h6>
    @for (int i=0 ; i< Model.Roles.Count ; i++)
    {
        <div class="form-check m-1">
        <input type="hidden" asp-for="@Model.Roles[i].RoleName">
        <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input">
            <label class="form-check-label" asp-for="@Model.Roles[i].IsSelected">
                @Model.Roles[i].RoleName
        </label>

        </div>
    }
    <span asp-validation-for="Roles" class="text-danger"></span>

    <button type="submit" class="btn btn-primary d-block mt-4">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
